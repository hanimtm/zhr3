<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="id_salary_journal_view_form_add_new_journal" model="ir.ui.view">
        <field name="name">Add journal on salary journal</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="	hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']" position="replace">
                <page string="Accounting" name="accounting">
                    <group>
                        <group>
                            <field name="account_debit"/>
                            <field name="account_credit"/>
                            <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                            <field name="not_computed_in_net"/>
                        </group>
                        <group>
                            <field name="journal"/>
                            <field name="journal_id"
                                   attrs="{'invisible': [('journal', '=', False)],
                                    'required': [('journal', '!=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
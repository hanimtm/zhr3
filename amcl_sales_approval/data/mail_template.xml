<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Quotation (customer) approval request -->
        <record id="email_template_quotation_approval_request" model="mail.template">
            <field name="name">Quotation Approval Request</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Quotation Approval Request</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">
                % for user in object.user_ids:
                ${user.email},
                %endfor
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <div style="height:auto; text-align: center; font-size: 30px; color: #29408c;">
                        <strong style="border-bottom: 2px solid #29408c; padding-bottom: 1px; text-transform: uppercase;">
                            Quotation Approval Request
                        </strong>
                    </div>
                    <div style="text-align: left; font-size: 20px; margin-top: 10px; color: #29408c;">
                        <p>Hello Approvers,</p>

                        <p>Quotation approval ${object.name} has been raised by ${user.name}. Please review and approve or
                            reject (with reason given) this quotation.
                        </p>
                    </div>
                </div>
            </field>
        </record>
        <!--Quotation (customer) approved -->
        <record id="email_template_quotation_approved" model="mail.template">
            <field name="name">Quotation Approved</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Quotation Approved</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${object.sale_order_approval_history[-1].user.email}</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <div style="height:auto; text-align: center; font-size: 30px; color: #29408c;">
                        <strong style="border-bottom: 2px solid #29408c; padding-bottom: 1px; text-transform: uppercase;">
                            Quotation Approved
                        </strong>
                    </div>
                    <div style="text-align: left; font-size: 20px; margin-top: 10px; color: #29408c;">
                        <p>Hello ${object.sale_order_approval_history[-1].user.name},</p>

                        <p>Quotation ${object.name} has been approved by ${object.env.user.name}. You may release the Sale
                            order to the customer if all approvers approved the quotation.
                        </p>
                    </div>
                </div>
            </field>
        </record>
        <!--Quotation (customer) rejected -->
        <record id="email_template_quotation_rejected" model="mail.template">
            <field name="name">Quotation Rejected</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Quotation Rejected</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${object.sale_order_approval_history[-1].user.email}</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <div style="height:auto; text-align: center; font-size: 30px; color: #29408c;">
                        <strong style="border-bottom: 2px solid #29408c; padding-bottom: 1px; text-transform: uppercase;">
                            Quotation Rejected
                        </strong>
                    </div>
                    <div style="text-align: left; font-size: 20px; margin-top: 10px; color: #29408c;">
                        <p>Hello ${object.sale_order_approval_history[-1].user.name},</p>

                        <p>Quotation ${object.name} has been rejected by ${object.user_id.name}. Please review this with the
                            approver and make changes to the record, then re-send for approval.
                        </p>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
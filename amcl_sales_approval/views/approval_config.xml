<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_apporval_role_tree_view" model="ir.ui.view">
        <field name="name">sale.approval.role.tree</field>
        <field name="model">sale.approval.role</field>
        <field name="arch" type="xml">
            <tree string="Sale Approval Role" editable='bottom'>
                <field name='name' />
                <field name='user_ids' widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="sale_sale_approval_role_form_action" model="ir.actions.act_window">
        <field name="name">Sale Approval Roles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.approval.role</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Approval Role.
            </p>
        </field>
    </record>
    <record id="sale_apporval_category_tree_view" model="ir.ui.view">
        <field name="name">sale.approval.category.tree</field>
        <field name="model">sale.approval.category</field>
        <field name="arch" type="xml">
            <tree string="Sale Approval Category" editable='bottom'>
                <field name='name' />
            </tree>
        </field>
    </record>
    <record id="sale_approval_category_form_action" model="ir.actions.act_window">
        <field name="name">Sale Approval Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.approval.category</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Approval Category.
            </p>
        </field>
    </record>

    <record id="sale_product_template_form_view_approval_category" model="ir.ui.view">
        <field name="name">product.template.form.sale.approval.category</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="sale_approval_category" invisible="1"/>
            </xpath>
        </field>
    </record>
    <menuitem id="menu_sale_approval_category_form_action" parent="sale.menu_sale_config" sequence="51" action="sale_approval_category_form_action" />
    <menuitem id="menu_sale_sale_approval_role_form_action" parent="sale.menu_sale_config" sequence="52" action="sale_sale_approval_role_form_action" />
</odoo>